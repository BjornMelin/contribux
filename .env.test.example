# Neon Database Configuration for Testing
# Get these values from https://console.neon.tech

# Your Neon API key (create at https://console.neon.tech/account/keys)
NEON_API_KEY=

# Your Neon project ID (found in console URL or project settings)
NEON_PROJECT_ID=

# Main database URL (connection string from Neon console)
DATABASE_URL=

# Optional: Specific branch URLs if you want to use fixed branches
DATABASE_URL_TEST=
DATABASE_URL_DEV=

# Test environment
NODE_ENV=test

# Authentication (for integration tests)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=secure-test-token-32chars-minimum-for-testing-only

# GitHub App (for integration tests - use test app credentials)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_WEBHOOK_SECRET=test-webhook-secret

# OpenAI (for AI features in tests - use test API key)
OPENAI_API_KEY=

# Optional: Redis for caching tests (can use mock)
REDIS_URL=

# Additional testing environment variables
# WebAuthn Configuration for testing
NEXT_PUBLIC_APP_NAME="Contribux Test"
NEXT_PUBLIC_RP_ID="localhost"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
WEBAUTHN_RP_NAME="Contribux Test"

# Security testing configuration
ENCRYPTION_KEY="test-64-character-hex-encoded-encryption-key-for-testing-only"
CORS_ORIGINS="http://localhost:3000"

# Rate limiting for tests (relaxed limits)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60

# Feature flags for testing
ENABLE_WEBAUTHN=true
ENABLE_OAUTH=true
ENABLE_AUDIT_LOGS=true
ENABLE_ADVANCED_SECURITY=false
ENABLE_SECURITY_DASHBOARD=false

# AI testing (optional - use test API key or mock)
# OPENAI_API_KEY=test-key-or-leave-empty-for-mocks

# Real-time monitoring (use mock for tests)
NEXT_PUBLIC_WS_ENDPOINT="ws://localhost:3001/test-metrics"

# Security monitoring for tests
ENABLE_SECURITY_AUDIT=false
ENABLE_MFA_MONITORING=false
ENABLE_PERFORMANCE_MONITORING=false

# CSP for testing
CSP_NONCE_SECRET="test-csp-nonce-secret-32-chars-minimum"

# Additional security headers
ENABLE_SECURITY_HEADERS=false
ENABLE_CORS_PROTECTION=true

# Logging for tests
LOG_LEVEL=warn