# Test Environment Configuration Example
# Copy this to .env.test and customize for your test environment

# Basic test environment
NODE_ENV=test

# Database URLs for testing
# Option 1: Use a real test database (recommended for integration tests)
# DATABASE_URL_TEST=postgresql://user:password@localhost:5432/contribux_test

# Option 2: Use mock database (automatically provided by test setup)
DATABASE_URL=postgresql://test:test@localhost:5432/testdb

# Test-specific configuration
DEBUG_TESTS=false

# Authentication test configuration
JWT_SECRET=test-jwt-secret-with-sufficient-length-and-entropy-for-testing-purposes-only

# OAuth test configuration (mock values that meet validation requirements)
GITHUB_CLIENT_ID=test1234567890123456
GITHUB_CLIENT_SECRET=test-github-client-secret-with-sufficient-length-for-testing

# WebAuthn test configuration
NEXT_PUBLIC_RP_ID=localhost
NEXT_PUBLIC_APP_URL=http://localhost:3000
WEBAUTHN_RP_NAME=Contribux Test

# Database configuration defaults
DB_PROJECT_ID=test-project
DB_MAIN_BRANCH=test-main
DB_DEV_BRANCH=test-dev
DB_TEST_BRANCH=test-test
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=10000

# Vector search test defaults
HNSW_EF_SEARCH=200
VECTOR_SIMILARITY_THRESHOLD=0.7
HYBRID_SEARCH_TEXT_WEIGHT=0.3
HYBRID_SEARCH_VECTOR_WEIGHT=0.7

# Application configuration
PORT=3000
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
ENABLE_WEBAUTHN=true
ENABLE_OAUTH=true
ALLOWED_REDIRECT_URIS=http://localhost:3000/api/auth/github/callback
NEXT_PUBLIC_APP_NAME=Contribux Test

# Encryption configuration (for tests that need encryption)
# ENCRYPTION_KEY=test-encryption-key-64-chars-hex-encoded-for-testing-only