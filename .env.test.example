# Test environment configuration for contribux
# Copy this file to .env.test and replace with your actual test values

# Test Database Configuration (Neon PostgreSQL)
DATABASE_URL_TEST="postgresql://test_user:test_password@your-neon-endpoint.neon.tech/test_db?sslmode=require"
DATABASE_URL="postgresql://test_user:test_password@your-neon-endpoint.neon.tech/test_db?sslmode=require"

# For compatibility with existing env structure
DATABASE_URL_DEV="postgresql://dev_user:dev_password@your-dev-endpoint.neon.tech/dev_db?sslmode=require"

# Database configuration (example values)
DB_PROJECT_ID="your-project-id"
DB_MAIN_BRANCH="br-main-branch-id"
DB_DEV_BRANCH="br-dev-branch-id"
