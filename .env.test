# Test Environment Configuration
# This file is loaded by tests/setup.ts for test environment isolation

NODE_ENV=test

# Mock database URL for tests that don't need real database connections
# Tests that need real databases should use DATABASE_URL_TEST from .env.local
DATABASE_URL=postgresql://test:test@localhost:5432/testdb

# Test-specific configuration
DEBUG_TESTS=false

# WebAuthn test configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Contribux Test
WEBAUTHN_ORIGINS=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_RP_ID=localhost

# OAuth test configuration (mock values that meet validation requirements)
GITHUB_CLIENT_ID=test1234567890123456
GITHUB_CLIENT_SECRET=test-github-client-secret-with-sufficient-length-for-testing
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback

# JWT configuration for tests
JWT_SECRET=test-jwt-secret-with-sufficient-length-and-entropy-for-testing-purposes-only

# Mock encryption keys for testing
OAUTH_ENCRYPTION_KEY=test-encryption-key-32-bytes-long

# Vector search test defaults
